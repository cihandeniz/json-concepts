{
    "package": {
        "path": "/",
        "schema": {
            "$package*": {
                "package": "$package",
                "Service?": "$Service"
            }
        }
    },
    "Rpc": {
        "path": "/**/$package",
        "schema": {
            "$Rpc": {
                "Name": "$Name",
                "Request": {
                    "$stream?": true,
                    "Message": "$Message"
                }
            }
        }
    },
    "Message": {
        "path": "/**/$package",
        "schema": {
            "$Message": {
                "Name": "$Name",
                "$field*": {
                    "type": "$type",
                    "index": "$index"
                }
            }
        }
    }
}